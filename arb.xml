				</Anchors>
				<Backdrop bgFile="Interface\AddOns\ARB\Media\ButtonNormal" edgeFile="Interface\AddOns\ARB\Media\Edge">
					<EdgeSize val="12" />
					<BackgroundInsets left="4" right="4" top="4" bottom="4" />
				</Backdrop>
				<NormalFont style="GameFontNormal"/>
				<PushedFont style="GameFontNormal"/>
				<HighlightFont style="GameFontHighlight"/>
				<Scripts>
					<OnMouseDown>
						doTaunt()
					</OnMouseDown>
				</Scripts>
			</Button>

