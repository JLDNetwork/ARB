<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script File="arb.lua"/>
	<Frame name="ARBButtonFrame" parent="UIParent" hidden="true" enableMouse="true" movable="true">
		<Size x="265" y="75"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\AddOns\ARB\Media\Background" edgeFile="Interface\AddOns\ARB\Media\Edge">
			<EdgeSize val="16" />
			<BackgroundInsets left="4" right="4" top="4" bottom="4" />
